      path: ""
      type: "posts"
    values:
      layout: "post"
      author: "Ditt Navn"
      share-buttons: true
      comments: true
      categories: "Bilder"
  - scope:
      path: ""
      type: "pages"
    values:
      layout: "page"
      header: true
      footer: true

# End of file
